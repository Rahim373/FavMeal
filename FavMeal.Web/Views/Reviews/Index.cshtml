                <li><a href="#">4</a></li>
                <li><a href="#">5</a></li>
                <li>
                    <a href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>*@
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </nav>
</div>